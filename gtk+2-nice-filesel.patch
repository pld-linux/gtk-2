+  gchar *filename;
+  GdkPixbuf *buf;
+  static GHashTable *cache = NULL;
+
+  if (!theme || !icon || !vfs_initialized || !icon_theme_initialized)
+      return NULL;
+
+  if (g_path_is_absolute (icon))
+      filename = g_strdup (icon);
+  else
